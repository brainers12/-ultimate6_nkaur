

<!-- app/views/customers/_customer.html.erb -->
<div class="customer-card">
  <div class="customer-info">
    <h3><%= customer.full_name %></h3>
    <% if customer.email_address.present? %>
      <p>Email: <%= customer.email_address %></p>
    <% else %>
      <p>Email: Not Provided</p>
    <% end %>
    <p>Phone: <%= customer.phone_number %></p>
    <p>Notes: <%= customer.notes %></p>
  </div>
  <% if customer.image.attached? %>
    <div class="customer-image">
      <%= image_tag(customer.image.variant(resize_to_limit: [100, 100]), alt: "#{customer.full_name}'s photo") %>
    </div>
  <% else %>
    <div class="customer-image">
      <%= image_tag('Image.png', alt: "No photo available", width: '100', height: '100') %>
    </div>
  <% end %>
</div>

